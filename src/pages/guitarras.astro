---
import Layout from '../layouts/Layout.astro';
import Guitarra from '../components/Guitarra.astro';

const url = `${import.meta.env.PUBLIC_API_URL}/guitarras?populate=imagen`;
const respuesta = await fetch(url);
const {data} = await respuesta.json()

---

<Layout title="Guitarras" description="Página de tienda de instrumentos musicales, guitarras, cursos, blog y más">
	<main class="contenedor">
		<h1 class="heading">Guitaras</h1>

		<div class="grid">
			{ data?.map(guitarra =>(
				<Guitarra 
					nombre={guitarra.attributes.nombre}
					description={guitarra.attributes.description}
					url={guitarra.attributes.url}
					precio={guitarra.attributes.precio}
					imagen={guitarra.attributes.imagen}
				/>
			))}
		</div>
	</main>
</Layout>

